<?xml version="1.0" encoding="ISO-8859-1"?>
<!DOCTYPE project>

<!-- =================================================================== -->
<!--                       Project definition                            -->
<!-- =================================================================== -->
<project name="store-stringpool-xa" default="store-stringpool-xa-jar" basedir="../../..">

  <!-- =================================================================== -->
  <!--                      Property Definitions                           -->
  <!-- =================================================================== -->

  <!-- =================================================================== -->
  <!--                              Imports                                -->
  <!-- =================================================================== -->

  <!-- =================================================================== -->
  <!--                          Path Definitions                           -->
  <!-- =================================================================== -->
  <path id="store-stringpool-xa-classpath">

    <path refid="common-classpath"/>

    <fileset file="${query.dist.dir}/${query.jar}"/>
    <fileset file="${resolver-spi.dist.dir}/${resolver-spi.jar}"/>
    <fileset file="${tuples.dist.dir}/${tuples.jar}"/>
    <fileset file="${util.dist.dir}/${util.jar}"/>
    <fileset file="${util-xa.dist.dir}/${util-xa.jar}"/>
  </path>

  <path id="store-stringpool-xa-test-classpath">

    <path refid="store-stringpool-xa-classpath"/>

    <fileset file="${store-stringpool-xa.dist.dir}/${store-stringpool-xa.jar}"/>
  </path>

  <target name="store-stringpool-xa-clean"
          description="Removes all compile generated files for the store-stringpool-xa">

    <tstamp/>

    <delete dir="${store-stringpool-xa.obj.dir}"/>
    <delete dir="${store-stringpool-xa.test.dir}"/>
    <delete dir="${store-stringpool-xa.dist.dir}"/>
  </target>

  <target name="-store-stringpool-xa-prepare"
          description="Creates all directories associated with the
                       store-stringpool-xa's compilation"
          depends="-prepare-build">

    <mkdir dir="${store-stringpool-xa.obj.dir}"/>
    <mkdir dir="${store-stringpool-xa.test.dir}"/>
    <mkdir dir="${store-stringpool-xa.dist.dir}"/>
    <mkdir dir="${store-stringpool-xa.obj.dir}/classes"/>
  </target>

  <target name="store-stringpool-xa-compile"
          depends="-store-stringpool-xa-prepare, 
                   resolver-spi-jar, util-xa-jar"
          description="Compiles all store-stringpool-xa related files included
                       generated source code">

    <javac destdir="${store-stringpool-xa.obj.dir}/classes" debug="on"
           deprecation="on" source="1.4">

      <classpath refid="store-stringpool-xa-classpath"/>

      <src path="${store-stringpool-xa.src.dir}/java"/>
    </javac>
  </target>

  <target name="store-stringpool-xa-jar"
          depends="-store-stringpool-xa-jar-uptodate, store-stringpool-xa-compile"
          unless="store-stringpool-xa.jar.uptodate"
          description="Builds the memory-backed node pool JAR">

    <jar jarfile="${store-stringpool-xa.dist.dir}/${store-stringpool-xa.jar}">
      <fileset dir="${store-stringpool-xa.obj.dir}/classes"/>
    </jar>
  </target>

  <target name="-store-stringpool-xa-jar-uptodate">

    <uptodate property="store-stringpool-xa.jar.uptodate"
              targetfile="${store-stringpool-xa.dist.dir}/${store-stringpool-xa.jar}">
      <srcfiles dir="${store-stringpool-xa.obj.dir}/classes" includes="**/*"/>
    </uptodate>
  </target>

  <target name="store-stringpool-xa-dist"
          depends="store-stringpool-xa-jar"
          description="Performs all tasks related to finalising this
                       store-stringpool-xa and readying it for distribution">

    <!-- All that's involved in the final version of the store-stringpool-xa library
         is the jar so we don't need to do anything because the dependencies
         take care of the work. -->
  </target>

  <target name="store-stringpool-xa-test"
          depends="store-stringpool-xa-jar">

    <antcall target="component-test">

      <param name="classpath.id" value="store-stringpool-xa-test-classpath"/>
      <param name="dir" value="${store-stringpool-xa.src.dir}"/>
      <param name="jar" value="${store-stringpool-xa.jar}"/>
    </antcall>
  </target>

  <target name="store-stringpool-xa-loadtest" depends="store-stringpool-xa-jar">
    <antcall target="component-loadtest">
      <param name="classpath.id" value="store-stringpool-xa-classpath"/>
      <param name="dir" value="${store-stringpool-xa.src.dir}"/>
      <param name="jar" value="${store-stringpool-xa.jar}"/>
    </antcall>
  </target>

  <target name="store-stringpool-xa-javadoc"
          depends="store-stringpool-xa-jar"
          description="Creates the javadoc for this store-stringpool-xa">

    <antcall target="javadoc">

      <param name="javadoc.package" value="org.kowari.store.stringpool.xa.*"/>
      <param name="javadoc.classpath" value="store-stringpool-xa-classpath"/>
      <param name="javadoc.sourcepath" value="${store-stringpool-xa.src.dir}/java"/>
    </antcall>
  </target>

  <target name="store-stringpool-xa-help"
          description="Displays the help information for this store-stringpool-xa">

    <!-- This is similar to the main project's help except the information
         is specific to this store-stringpool-xa -->

    <echo message="Welcome to the build script for ${store-stringpool-xa.name}."/>
    <echo message=""/>
    <echo message="These targets can be invoked as follows:"/>
    <echo message="  ./build.sh &lt;target&gt;"/>
    <echo message=""/>

    <java fork="false" classname="org.apache.tools.ant.Main"
          newenvironment="false">

      <jvmarg value="${arch.bits}"/>

      <arg line="-buildfile ${store-stringpool-xa.src.dir}/build.xml -projecthelp"/>
    </java>
  </target>
</project>
