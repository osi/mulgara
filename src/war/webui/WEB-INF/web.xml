<?xml version="1.0" encoding="ISO-8859-1"?>
<!DOCTYPE web-app
    PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.2//EN"
    "http://java.sun.com/j2ee/dtds/web-app_2_2.dtd">

<web-app>

  <!-- ==================================================================== -->
  <!-- Project display                                                      -->
  <!-- ==================================================================== -->
  <display-name>MulgaraV</display-name>
  <description>
    The Mulgara Metadata Store Viewer (MulgaraV) is a web-based application that
    allows you to view and traverse the data contained on a Mulgara server.
  </description>



  <!-- ==================================================================== -->
  <!-- KowariV servlets                                                     -->
  <!-- ==================================================================== -->
  <servlet>
    <servlet-name>ApplicationGateway</servlet-name>
    <servlet-class>org.mulgara.webui.ApplicationGateway</servlet-class>
      <init-param>
        <!-- Disable the client side script detection code -->
        <param-name>
          DisableScriptDetection
        </param-name>
        <param-value>
          true
        </param-value>
      </init-param>
    <load-on-startup>1</load-on-startup>
  </servlet>



  <!-- ==================================================================== -->
  <!-- Barracuda servlets                                                   -->
  <!-- ==================================================================== -->
  <servlet>
    <servlet-name>ResourceGateway</servlet-name>
    <servlet-class>org.enhydra.barracuda.core.helper.servlet.ResourceGateway</servlet-class>
    <load-on-startup>2</load-on-startup>
  </servlet>


  <!-- ==================================================================== -->
  <!-- Servlet mappings                                                     -->
  <!-- ==================================================================== -->

  <servlet-mapping>
    <servlet-name>ApplicationGateway</servlet-name>
    <url-pattern>*.event</url-pattern>
  </servlet-mapping>

  <servlet-mapping>
    <servlet-name>ResourceGateway</servlet-name>
    <url-pattern>/xlib/*</url-pattern>
  </servlet-mapping>


  <!-- ==================================================================== -->
  <!-- Servlet container settings                                           -->
  <!-- ==================================================================== -->

  <session-config>
    <session-timeout>9999</session-timeout>
  </session-config>
  <welcome-file-list>
    <welcome-file>index.html</welcome-file>
  </welcome-file-list>

</web-app>
