<?xml version="1.0" encoding="ISO-8859-1"?>
<!DOCTYPE web-app
  PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.2//EN"
  "http://java.sun.com/j2ee/dtds/web-app_2_2.dtd">

<web-app>
  <display-name>http</display-name>
  <description>HTTP query support for Kowari</description>
  <servlet>
    <servlet-name>http-server</servlet-name>
    <display-name>Kowari over HTTP server</display-name>
    <description>bridge between HTTP and an underlying protocol</description>
    <servlet-class>HttpServerServlet</servlet-class>
    <init-param>
      <param-name>dir</param-name>
      <param-value>/tmp</param-value>
      <description>The persistence directory for the Kowari server</description>
    </init-param>
    <init-param>
      <param-name>providerClassName</param-name>
      <param-value>org.kowari.store.xa.DatabaseImpl</param-value>
      <description>the name of the triple store implementation</description>
    </init-param>
    <init-param>
      <param-name>uri</param-name>
      <param-value>http://localhost:8080/server-http</param-value>
      <description>The URI of the Kowari server</description>
    </init-param>
    <load-on-startup>1</load-on-startup>
  </servlet>
  <servlet-mapping>
    <servlet-name>http-server</servlet-name>
    <url-pattern>/*</url-pattern>
  </servlet-mapping>
</web-app>
