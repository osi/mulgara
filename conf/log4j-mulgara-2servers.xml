<?xml version="1.0"?>
<!DOCTYPE log4j:configuration SYSTEM "log4j.dtd">

<!--
Log4J configuration for the Mulgara Metadata Store project.
-->

<log4j:configuration>

  <!-- Log to standard output -->
  <appender name="STDOUT" class="org.apache.log4j.ConsoleAppender">
    <layout class="org.apache.log4j.PatternLayout">
      <param name="ConversionPattern" value="%d %-5p [%t] %C{2} - %m%n"/>
    </layout>
    <filter class="org.apache.log4j.varia.LevelRangeFilter">
      <param name="LevelMin" value="INFO"/>
      <param name="LevelMax" value="FATAL"/>
      <param name="AcceptOnMatch" value="true"/>
    </filter>
  </appender>

  <!-- Log to a file -->
  <appender name="LOGFILE" class="org.apache.log4j.RollingFileAppender">
    <param name="File" value="./mulgara-server2.log"/>
    <param name="MaxFileSize" value="5MB"/>
    <param name="MaxBackupIndex" value="3"/>
    <layout class="org.apache.log4j.PatternLayout">
      <param name="ConversionPattern" value="%d %-5p [%t] %C{2} - %m%n"/>
      <!--<param name="ConversionPattern" value="%d %-5p [%t] (%-15c) %m%nLOCATION : %l%n"/>-->
    </layout>
    <filter class="org.apache.log4j.varia.LevelRangeFilter">
      <param name="LevelMin" value="WARN"/>
      <param name="LevelMax" value="FATAL"/>
      <param name="AcceptOnMatch" value="true"/>
    </filter>
  </appender>

  <!-- (Insert category elements here) -->


  <!-- INFO and above goes to console, all else to logfile appender -->
  <root>
    <priority value="INFO"/>
    <appender-ref ref="LOGFILE"/>
    <appender-ref ref="STDOUT"/>
  </root>

</log4j:configuration>
